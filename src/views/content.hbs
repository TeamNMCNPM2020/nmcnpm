{{#section 'title'}}
<title>{{content.title}}</title>
{{/section}}

<div class="col-md-9 container">
  <section id="content" style="background: white;" class="mt-4 mb-2 px-4 py-3">
    <section id="content-header">
      <div class="d-flex justify-content-between">
        <p class="mb-0"><a href="/" class="text-dark"><b>Chuyên mục</b></a></p>
        <small>{{content.postTime}}</small>
      </div>
      <h3><b>{{content.title}}</b></h3>
      <div class="d-flex justify-content-between">
        <p class="mb-0"><a href="/" class="text-dark"><b>Nguyễn Văn A</b></a></p>
        <small><a href="/"><b>Chỉnh sửa</b></a></small>
      </div>
    </section>
    <section id="content-body" class="mt-2">
      {{{content.body}}}
    </section>
  </section>

  <div class="card">
    <div class="card-body p-3">
      <form id="formComment" action="" method="post">
        <textarea name="comment" style="resize: none;" rows="1" class="form-control" type="text" placeholder="Bình luận" required></textarea>
        <div class="mt-1 d-flex justify-content-end">
          <button class="btn btn-dark" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <section id="comments" class="mt-2">
    <div class="card">
      <div class="card-body">

        {{!-- Each comment --}}
        <div class="mb-3">
          <div class="d-flex align-items-center justify-content-between">
            <p class="mb-0"><a href="/u/" class="text-dark"><b>Người đăng</b></a><small class="ml-1">09/09/2020 12:00PM</small></p>
          </div>
          <p class="mb-0"><small>Lorem islum Lorem islum Lorem islum Lorem islum Lorem islum</small></p>
        </div>         

      </div>
    </div>
  </section>
</div>