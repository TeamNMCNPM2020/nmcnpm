{{#section "js"}}
{{!-- hightlight.js for Code formating --}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.5.0/highlight.min.js"></script>

{{!-- Bootstrap fileinput --}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>
<script>
$('#imgTitle').fileinput({
  theme: 'fa',
  dropZoneEnabled: false,
  showUpload: false,
  required: true,
  maxFileSize: 512,
  allowedFileExtensions: ['jpg'],
});
</script>

{{!-- Quilljs WYSIWYG editor--}}
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script>  {{!-- Init --}}
let quill = new Quill('#editor-container', {
  theme: 'snow',
  placeholder: 'Nội dung bài viết',
  modules: {
    syntax: true, //use highlight.js code format
    toolbar: [
      [
        { 'font': [] }, 
        { 'header': [false, 1, 2, 3, 4, 5, 6] }, 
      ],
      [{ 'align': [] }],

      ['bold', 'italic', 'underline', 'strike'],    //Text style
      [{ 'script': 'sub'}, { 'script': 'super' }],  //Superscript/Subscript

      [{ 'color': [] }, { 'background': [] }],      //Text color & background color
      ['blockquote', 'code-block', 'formula'],
      ['link', 'image', 'video'],

      [{ 'list': 'ordered'}, { 'list': 'bullet' }],
      [{ 'indent': '-1'}, { 'indent': '+1' }],      //Outdent/Indent

    ],
  }
});

{{!-- Form validation --}}
$('#form').on('submit', function(e) {
  e.preventDefault();

  const courseName = $('#txtCourseName').val();
  if (courseName.length === 0) {
    alert('Course name is required');
    return;
  }

  const coursePrice = parseInt($('#numPrice').val());
  if (!Number.isInteger(coursePrice)) {
    //console.log(coursePrice);
    alert('Please enter price correctly');
    return;
  }

  // Populate hidden form on submit
  $('#txtFullDes').val(quill.root.innerHTML);

  $('#form').off('submit').submit();
});
</script>
{{/section}}
<div class="container-fluid">
  <div class="card mt-2">
    <div class="card-body">
  <form id="form" method="POST">
    <input type="hidden" value="" id="txtContentId" name="_id">
    <div class="form-group">
      <label for="txtTitle">Tiêu đề</label>
      <input 
          type="text" 
          class="form-control" 
          value="{{course.CourseName}}" 
          id="txtTitle" 
          name="Title" 
          autofocus required>
    </div>
    <div class="form-group">
      <label for="selectCat">Chuyên mục</label>
      <select class="form-control" id="selectCat" name="topic" required>
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
      </select>
    </div>
    <div class="form-group">
      <label for="txtContent">Nội dung</label>
      <div id="editor-container">
        {{!-- where the user enter the description --}}

      </div>
      {{!-- where the description is actually put to send to server --}}
      <input type="hidden" class="form-control" id="txtContent" name="ContentBody" required>
    </div>
    <button type="submit" class="btn btn-dark w-100 mt-4">Đăng</button>
  </form>
  </div>
  </div>

  {{#if admin}}
  <div class="card">
    <div class="card-body">
      <form action="/teacher/course/img" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{course._id}}" id="txtCourseID" name="_id"> 
        <div class="form-group">
          <label for="imgTitle">Hình đại diện</label>
          <input id="imgTitle" name="imgTitle" type="file" class="file" accept=".jpg">
        </div>
        <button type="submit" class="btn btn-dark w-100 mt-4">
          <i class="fa fa-upload" aria-hidden="true"></i>
          Tải hình
        </button>
      </form>
    </div>
  </div>
  {{/if}}
</div>
    

