<div class="my-2 row p-2" style="background: white;">
  <div class="col-12 p-0 min-vh-100">

    {{!-- Each content row --}}
    {{#each contents}}
    <div class="card flex-row border-0 m-2">
      <div class="card-header p-0">
        <img class="img-fluid" src="https://dummyimage.com/210x140/dddddd/000000" style="object-fit: cover;" alt="">
      </div>
      <div class="card-body ml-2 p-1 d-flex flex-column">
        <h5 class="card-title mb-1">{{title}}</h5>
        <div class="mt-auto d-flex flex-row flex-wrap">
          {{#if news_active}}
          <small class="mr-1 font-weight-bold">
            <a href="#" style="z-index: 500; position: relative;">Chủ đề</a>
          </small>
          {{/if}}

          <small class="ml-auto mx-2">
            <i class="fa fa-refresh" aria-hidden="true"></i>
            {{postTime}}
          </small>
          <small class="mr-1">
            <i class="fa fa-user" aria-hidden="true"></i>
            <a class="text-dark" href="/u/#" style="z-index: 500; position: relative;">Người đăng</a>
          </small>

          <small class="mx-1">
            <i class="fa fa-comments" aria-hidden="true"></i>
            000000
          </small>
        </div>
        <a href="/c/{{_id}}" class="stretched-link"></a>
      </div>
    </div>
    {{else}}
    <p class="text-center mt-2">Không có dữ liệu</p>
    {{/each}}

  </div>

  {{!-- Pagination --}}
  <div class="col-12 text-right">
    <nav>
      <ul class="pagination justify-content-end">
        <li class="page-item {{#unless this.canGoPrev}}disabled{{/unless}}">
          <a class="page-link" href="?page={{this.prevPage}}" tabindex="-1">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
          </a>
        </li>
        {{#each this.pageItems}} 
        <li class="page-item {{#if isActive}}active{{/if}}">
          <a class="page-link" href="?page={{value}}">{{value}}</a>
        </li>
        {{/each}}
        <li class="page-item {{#unless this.canGoNext}}disabled{{/unless}}">
          <a class="page-link" href="?page={{this.nextPage}}">
            <i class="fa fa-chevron-right" aria-hidden="true"></i>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>